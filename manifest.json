{
    "name": "Cryptodog",
    "description": "Private conversations made easy",
    "version": "2.3.1",

    "manifest_version": 2,
    
    "background": {
        "scripts": ["background/background.js"]
    },

    "browser_action": {
        "default_icon": {
            "128": "img/logo-128.png"
        }
    },
    
    "icons": {
        "128": "img/logo-128.png",
        "48": "img/logo-48.png",
        "16": "img/logo-16.png",
        "38": "img/logo-38.png",
        "19": "img/logo-19.png"
    },

    "permissions": [
        "activeTab",
	    "notifications",
        "storage"
    ]
}
