{
    "manifest_version": 2,

    "name": "Cryptodog",
    "description": "A community fork of Cryptocat",
    "version": "1.5.7",

    "browser_action": {
        "default_icon": "img/logo-512.png"
    },

    "background": {
        "scripts": ["chrome.js"],
        "persistent": false
    },

    "permissions": [
        "activeTab",
        "notifications",
        "storage"
    ]
}
